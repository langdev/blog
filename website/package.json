{
  "name": "blog",
  "scripts": {
    "start": "gatsby serve",
    "clean": "rm -rf ./public",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "build": "gatsby build --prefix-paths",
    "dev": "run-p 'dev:**'",
    "dev:gatsby": "gatsby develop -H 0.0.0.0",
    "dev:prettier": "onchange '**/*.{js,ts,tsx,scss}' --exclude-path '.gitignore' -- prettier --write '{{changed}}'",
    "deploy": "run-s build deploy:gh-pages",
    "deploy:gh-pages": "gh-pages -d public"
  },
  "dependencies": {
    "@types/node": "^14.10.1",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "gatsby": "^2.24.58",
    "gatsby-link": "^2.4.13",
    "gatsby-plugin-catch-links": "^2.3.11",
    "gatsby-plugin-graphql-codegen": "^2.7.1",
    "gatsby-plugin-module-resolver": "^1.0.3",
    "gatsby-plugin-react-helmet": "^3.3.10",
    "gatsby-plugin-sitemap": "^2.4.12",
    "gatsby-plugin-typescript": "^2.4.19",
    "gatsby-source-filesystem": "^2.3.29",
    "gatsby-transformer-remark": "^2.8.34",
    "gh-pages": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "typescript": "^4.0.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "jsxBracketSameLine": true
  }
}
